<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.cipollino</groupId>
		<artifactId>cipollino-parent</artifactId>
		<version>0.2-SNAPSHOT</version>
		<relativePath>../cipollino-parent</relativePath>
	</parent>
	<artifactId>cipollino-bundle</artifactId>
	<packaging>pom</packaging>
	<name>Cipollino :: Bundle</name>

	<profiles>
		<profile>
			<id>assembly</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<configuration>
							<filesets>
								<fileset>
									<directory>${product.output}/${product.name}</directory>
									<followSymlinks>false</followSymlinks>
								</fileset>
							</filesets>
						</configuration>
					</plugin>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>single</goal>
								</goals>
								<configuration>
									<outputDirectory>${product.output}</outputDirectory>
									<appendAssemblyId>true</appendAssemblyId>
									<attach>true</attach>
									<finalName>${product.name}</finalName>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>org.cipollino</groupId>
					<artifactId>cipollino-core</artifactId>
					<version>${project.version}</version>
				</dependency>
				<dependency>
					<groupId>org.cipollino</groupId>
					<artifactId>cipollino-agent</artifactId>
					<version>${project.version}</version>
				</dependency>
				<dependency>
					<groupId>org.cipollino</groupId>
					<artifactId>cipollino-logger</artifactId>
					<version>${project.version}</version>
				</dependency>
				<dependency>
					<groupId>org.cipollino</groupId>
					<artifactId>cipollino-dependencies</artifactId>
					<version>${project.version}</version>
				</dependency>
				<dependency>
					<groupId>log4j</groupId>
					<artifactId>log4j</artifactId>
					<scope>runtime</scope>
				</dependency>
			</dependencies>
			<properties>
				<product.output>${basedir}/../../output</product.output>
			</properties>
		</profile>
		<profile>
			<id>jboss51</id>
			<activation>
				<property>
					<name>app-type</name>
					<value>jboss51</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<descriptors>
								<descriptor>../src/main/assembly/assembly-jboss51.xml</descriptor>
							</descriptors>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>org.jboss.logging</groupId>
					<artifactId>jboss-logging-log4j</artifactId>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>jse</id>
			<activation>
				<property>
					<name>app-type</name>
					<value>jse</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<descriptors>
								<descriptor>../src/main/assembly/assembly.xml</descriptor>
							</descriptors>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>